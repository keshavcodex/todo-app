<%- include("header"); -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    
    <ul>
      <% newListItems.forEach((item)=>{ %>
        <li><%= item %></li>
      <% }) %>
    </ul>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="button" class="rotate">+</button>
      </form>
  </div>

<%- include("footer"); -%>
